@model List<CarouselItem>
@{
    ViewData["Title"] = "Správa Carouselu";
}
<h1>@ViewData["Title"]</h1>


<a asp-action="Create">Vytvoření nového Carousel Itemu</a>
@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Image Source</th>
                    <th scope="col">Image Alternative Text</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var carouselItem in Model)
                    {
                        <tr>
                            <th scope="row">@carouselItem.ID</th>
                            <td>@carouselItem.ImageSrc</td>
                            <td>@carouselItem.ImageAlt</td>
                            <td><a asp-action="Edit" asp-route-ID="@carouselItem.ID">Edit</a></td>
                            <td><a asp-action="Delete" asp-route-ID="@carouselItem.ID" onclick="return ConfirmDelete();">Delete</a></td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    }
    else
    {
          <h2>Tabulka Carousel je prázdná</h2>
    }
}


@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}