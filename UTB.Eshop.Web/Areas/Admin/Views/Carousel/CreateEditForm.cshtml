@model CarouselItem
<form asp-action="@ViewBag.Akce" method="post" enctype="multipart/form-data">
    @{
        if (ViewBag.Akce == "Edit")
        { 
            <input type="hidden" asp-for="ID" />
        }
    }
    <div class="form-group">
        <label>Image</label>
        <input asp-for="Image" class="form-control-file">
    </div>
    <div class="form-group">
        <label>Image Alternative Text</label>
        <input asp-for="ImageAlt" class="form-control" placeholder="Enter Image Alternative Text">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>