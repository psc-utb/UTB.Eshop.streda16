@model CarouselItem
<form asp-action="@ViewBag.Akce" method="post">
    @{
        if (ViewBag.Akce == "Edit")
        { 
            <input type="hidden" asp-for="ID" />
        }
    }
    <div class="form-group">
        <label>Image Source</label>
        <input asp-for="ImageSrc" class="form-control" placeholder="Enter Image Source">
    </div>
    <div class="form-group">
        <label>Image Alternative Text</label>
        <input asp-for="ImageAlt" class="form-control" placeholder="Enter Image Alternative Text">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>